{{#features}}
    <li class="item" featId={{id}}>
        <p class="rm-popup-text-feature">
             <span class='rm-popup-label'> Nom :</span> <input type="text" class="nomdupoint" value="{{nom}}" onchange="categories.updatePoint({{id}})" maxlength="50"/> <br/>
             <span class='rm-popup-label'> Cat√©gorie :</span> <select class="categ-choice" ptcategorie="{{categorie}}" onchange="categories.updatePoint({{id}})"></select>
             <!--<input type="text" value="{{{categorie}}}" />--> 
             <!--<svg id="categ"+{{{id}}} class='itemCateg'></svg> --> <br/>
             <label class='rm-popup-label labelarea'> Description :</label> <textarea class="descriptiondupoint" rows="4" cols="50" onchange="categories.updatePoint({{id}})">{{{description}}} </textarea>  
        </p>
        <p>
             <span class='rm-popup-label labelarea'> Long :</span> {{{long}}}  -  <span class='rm-popup-label labelarea'> Lat :</span> {{{lat}}}
        </p>
        <p style="text-align: center; margin-top: 35px;">
             <button id="supprPntBtn"+{{{id}}} class="btn darkbtn" data-toggle="modal" data-target="#supprPtconfirm-modal" i18n="help.modal.doc" title="Supprimer le point" onclick="$('#pointASuppr').attr('ptid', {{{id}}});">Supprimer ce point</button>
        </div>

	</li>
    
    <script>
      categories.updateFicheInfoCateg();

    </script>
{{/features}}


