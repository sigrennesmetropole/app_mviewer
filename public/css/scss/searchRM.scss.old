/******************************************************************************
--------------------------- searchRM / searchCadastre -------------------------
********************************************************************************/
  
  #searchRMContainer {
    position: fixed;
    top: 65px;
    right: 0px;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
  }
  
  #searchRm {
    margin-top: 5px;
  }

  #searchContainer, #parcelSelector, #parcelInputs {
    display: flex;
  }
  
  #searchConfig, #searchRmInput, .sectionsList, .parcellesList, #dispalysearchParcel {
    height: 28px;
  }
  
  #searchRmInput {
    border-radius: 3px;
  }
  
  .sectionsList {
    width: 4rem;
  }
  
  .parcellesList {
    width: 5rem;
  }
  
  #searchConfig, #dispalysearchParcel {
    background-repeat: no-repeat;
    background-position: center;
    margin-left: 2%;
  }
  
  #searchConfig {
    background-image: url("../../public/img/filtre.png");
  }
  
  #dispalysearchParcel {
    align-self: end;
    background-image: url("../../public/img/options-horizontal.png");
  }

  .selectCityInput {
    padding-left: 0;
  }
  
  #containerSearchParams {
    margin-left: 2%;
  }
  
  #parcelInputs {
    width: 100%;
  }
  
  .slideInEffect {
    animation-duration: 1.5s;
    animation-name: slidein;
  }
  
  .slideOutEffect {
    animation-duration: 1.5s;
    animation-name: slideout;
  }
  
  
  @keyframes slidein {
    from {
      margin-left: 92%;
      width: 0%;
      overflow-x: hidden;
    }
  
    to {
      margin-left: 0%;
      width: 100%;
      overflow-x: hidden;
    }
  }
  
  @keyframes slideout {
  
    from {
      margin-left: 0%;
      width: 100%;
      overflow-x: hidden;
    }
  
    to {
      margin-left: 92%;
      width: 0%; 
      overflow-x: hidden;
    }
  }
  