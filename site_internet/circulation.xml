<?xml version="1.0" encoding="UTF-8"?> 
<config>
    <application
		title="Travaux du jour et survenant dans la semaine"
		logo="https://public.sig.rennesmetropole.fr/ressources/img/logos/rm/logo_mviewer_gris_inverse.png"
        titlehelp="À propos des cartes thématiques" 
		help="apps/site_internet/html/geotravaux_help.html"
		showhelp="false"
		style="apps/site_internet/css/site_internet_gris.css"
		exportpng="true"
		geoloc="true"
		measuretools="true"
		coordinates="false"
		printMap="true" 
		togglealllayersfromtheme="false"
        showClickNbItems="false" />
	<mapoptions maxzoom="20" minzoom="11" projection="EPSG:3857" center="-186098.36482879001,6125889.9088213602" zoom="12" />
    
	<baselayers style="default">
		<baselayer visible="true" id="pvci_nb" thumbgallery="img/basemap/pvcinb.jpg" title="Rennes Metropole" label="Plan de ville gris" type="WMTS" 
