	</baselayers>
    
	<searchparameters bbox="false" localities="false" features="false" static="false"
		searchRM="true" searchRMConf="apps/site_internet/addons/data/searchRVAConf.json"/>
    
	<themes mini="true">
        <theme id="theme-trafic_dessus" name="Trafic routier (dessus)" collapsed="true" icon="fas fa-road">
             <layer
                id="app:v_rva_trafic_fcd"
                name="Trafic routier"
                type="wms"
                url="https://public-test.sig.rennesmetropole.fr/geoserver/ows"
                visible="true"
                infoformat="application/vnd.ogc.gml"
                metadata="undefined"
                queryable="true"
                featurecount="5"
                refreshOnClick="true"
                infopanel="right-panel"><template url="apps/site_internet/templates/trafic-routier.mst"></template>
            </layer>
        </theme>
		<theme id="geotravaux" name="Travaux en cours" collapsed="true" icon="fas fa-exclamation-triangle">
            <layer
				id="geotravaux_evenement_1j"
				name="Travaux du jour"
				type="customlayer"
				url="apps/site_internet/customlayer/geotravaux.js"
                legendurl="apps/site_internet/img/legend/legende_geotravaux.png"
				visible="true"
				metadata="undefined"
				queryable="true"
                fields="niv_perturbation,type,libelle,localisation,date_deb,date_fin,tel_fixe"
                featurecount="5"
                tooltip="true" 
                tooltipenabled="true" 
                tooltipcontent="&lt;span class=&apos;rm-tooltip-title&apos;&gt;{{localisation}}&lt;/span&gt;&lt;/b&gt;&lt;br/&gt;{{niv_perturbation}}&lt;br/&gt; du &lt;span class=&apos;date_in_french_format&apos;&gt;{{date_deb}}&lt;/span&gt; au &lt;span class=&apos;date_in_french_format&apos;&gt;{{date_fin}}&lt;/span&gt;"
				infopanel="right-panel">
                 <template url="apps/site_internet/templates/geotravaux_evenements.mst"></template>
			</layer>
            <layer
				id="geotravaux_evenement_6j"
				name="Travaux de la semaine"
				type="customlayer"
				url="apps/site_internet/customlayer/geotravaux_6j.js"
                legendurl="apps/site_internet/img/legend/legende_geotravaux.png"
				visible="false"
				metadata="undefined"
				queryable="true"
				fields="niv_perturbation,type,libelle,localisation,date_deb,date_fin,tel_fixe"
                featurecount="5"
                tooltip="true" 
                tooltipenabled="true" 
                tooltipcontent="&lt;span class=&apos;rm-tooltip-title&apos;&gt;{{localisation}}&lt;/span&gt;&lt;/b&gt;&lt;br/&gt;{{niv_perturbation}}&lt;br/&gt; du &lt;span class=&apos;date_in_french_format&apos;&gt;{{date_deb}}&lt;/span&gt; au &lt;span class=&apos;date_in_french_format&apos;&gt;{{date_fin}}&lt;/span&gt;"
				infopanel="right-panel">
                <template url="apps/site_internet/templates/geotravaux_evenements.mst"></template>
			</layer>			
		</theme>
	</themes> 
</config>
