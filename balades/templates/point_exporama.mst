                    </div>
                </section>
            {{/photo3}}
            {{#lien3}}<a class='lienweb' href="{{{lien3}}}" target="_blank" title="{{{lien3}}}"> En savoir plus ... </a> {{/lien3}}
        </p>
    </li>
{{/features}}

