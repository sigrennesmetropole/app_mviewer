{{#features}}
    <li class="item">
        <div id="idbalade" style="display: none">{{{idbalade}}}</div>

        <h4 class="rm-popup-title-feature"> {{{name}}}</h4>
        
        {{#sous_titre}}</br><p class="rm-popup-title-level2"> {{{sous_titre}}} </p> {{/sous_titre}}
        
        <p class="rm-popup-text-feature">
            {{#description}}<span > {{{description}}}</span><br/>{{/description}}
            {{#photo}}
                <section class="rm-popup-text-feature">
                    <div id="photo" style="display: block;text-align: center;">
                        <img class="photo" src="{{{photo}}}" loading="lazy" style="height: 150px;">
                        <p class="labelPictureEnlarge rm-popup-label">Cliquez pour agrandir cette image</p>
                        {{#photo_credit}} {{{photo_credit}}} </br></br>{{/photo_credit}}
                    </div>
                </section>
            {{/photo}}
            {{#lien}}<a class='lienweb' href="{{{lien}}}" target="_blank" title="{{{lien}}}"> En savoir plus ... </a>{{/lien}}
        </p>
        <p class="rm-popup-text-feature">
            {{#description2}}<span > {{{description2}}}</span><br/>{{/description2}}
            {{#photo2}}
                <section class="rm-popup-text-feature">
                    <div id="photo" style="display: block;text-align: center;">
