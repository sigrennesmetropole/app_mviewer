                        {{#photo_credit2}} {{{photo_credit2}}} </br></br>{{/photo_credit2}}
                    </div>
                </section>
            {{/photo2}}
            {{#lien2}}<a class='lienweb' href="{{{lien2}}}" target="_blank" title="{{{lien2}}}"> En savoir plus ... </a>{{/lien2}}
        </p>
        <p class="rm-popup-text-feature">
            {{#description3}}<span > {{{description3}}}</span><br/>{{/description3}}
            {{#photo3}}
                <section class="rm-popup-text-feature">
                    <div id="photo" style="display: block;text-align: center;">
